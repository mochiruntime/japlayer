<Page
    x:Class="Japlayer.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Japlayer.ViewModels"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Library" Style="{StaticResource TitleTextBlockStyle}" Margin="24,24,0,12"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Genre Filter -->
            <Grid Padding="24,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Genres" Style="{StaticResource TitleTextBlockStyle}" FontSize="20" Margin="0,0,0,12"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Genres}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:GenreViewModel">
                                <CheckBox Content="{x:Bind Name}" 
                                          IsChecked="{x:Bind IsSelected, Mode=TwoWay}" 
                                          Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Media Grid -->
            <GridView Grid.Column="1" 
                      ItemsSource="{x:Bind ViewModel.MediaItems, Mode=OneWay}"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      ItemClick="MediaGrid_ItemClick"
                      Padding="12">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:MediaItemViewModel">
                    <Grid Width="300" Height="250" Margin="6" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                          CornerRadius="8" 
                          ToolTipService.ToolTip="{x:Bind Title}"
                          PointerEntered="MediaItem_PointerEntered"
                          PointerExited="MediaItem_PointerExited">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Cover Image -->
                        <Image Source="{x:Bind DisplayCover}" Stretch="UniformToFill" VerticalAlignment="Top"/>

                        <!-- Title Application -->
                        <Grid Grid.Row="1" Padding="8" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                            <TextBlock Text="{x:Bind Title}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       MaxLines="2" 
                                       TextTrimming="CharacterEllipsis" 
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        </Grid>
    </Grid>
</Page>
