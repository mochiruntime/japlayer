<Page
    x:Class="Japlayer.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Japlayer.ViewModels"
    xmlns:controls="using:Japlayer.Controls"
    mc:Ignorable="d"
    Background="Transparent"
    NavigationCacheMode="Required">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Library" Style="{StaticResource TitleTextBlockStyle}" Margin="24,24,0,12"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Container -->
            <Grid Grid.Column="0" Padding="24,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                    <StackPanel Spacing="16" Padding="0,0,12,24">
                        <!-- UserTag Filter Card -->
                        <Grid Padding="16" 
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                              CornerRadius="8" 
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                              BorderThickness="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="User Tags" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                                       Margin="0,0,0,12"/>
                            
                            <TextBox Grid.Row="1" 
                                     Text="{x:Bind ViewModel.TagSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     PlaceholderText="Filter tags..." 
                                     Margin="0,0,0,12"/>
                            
                            <ItemsControl Grid.Row="2" 
                                         ItemsSource="{x:Bind ViewModel.TagFilterItems, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:FilterItem">
                                        <CheckBox Content="{x:Bind Name}" 
                                                  IsChecked="{x:Bind IsSelected, Mode=TwoWay}" 
                                                  IsThreeState="True"
                                                  Margin="0,0,0,4"
                                                  HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <!-- Genres Filter Card -->
                        <Grid Padding="16" 
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                              CornerRadius="8" 
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                              BorderThickness="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Genres" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                                       Margin="0,0,0,12"/>
                            
                            <TextBox Grid.Row="1" 
                                     Text="{x:Bind ViewModel.GenreSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     PlaceholderText="Filter genres..." 
                                     Margin="0,0,0,12"/>
                            
                            <ItemsControl Grid.Row="2" 
                                         ItemsSource="{x:Bind ViewModel.GenreFilterItems, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:FilterItem">
                                        <CheckBox Content="{x:Bind Name}" 
                                                  IsChecked="{x:Bind IsSelected, Mode=TwoWay}" 
                                                  IsThreeState="True"
                                                  Margin="0,0,0,4"
                                                  HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Media Grid -->
            <GridView Grid.Column="1" 
                      ItemsSource="{x:Bind ViewModel.MediaItems, Mode=OneWay}"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      ItemClick="MediaGrid_ItemClick"
                      Padding="12,12,24,24">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:LibraryItemViewModel">
                    <Grid Width="300" Height="250" Margin="6" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                          CornerRadius="8" 
                          ToolTipService.ToolTip="{x:Bind Title}"
                          PointerEntered="MediaItem_PointerEntered"
                          PointerExited="MediaItem_PointerExited">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Cover Image -->
                        <controls:MediaCoverView Grid.Row="0" 
                                                 Source="{x:Bind DisplayCover, Mode=OneWay}" 
                                                 Stretch="UniformToFill"
                                                 CornerRadius="8" />

                        <!-- Title Application -->
                        <Grid Grid.Row="1" Padding="8" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                            <TextBlock Text="{x:Bind Title}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       MaxLines="2" 
                                       TextTrimming="CharacterEllipsis" 
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        </Grid>
    </Grid>
</Page>
