<UserControl
    x:Class="Japlayer.Controls.MediaCoverView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root">

    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            CornerRadius="{Binding CornerRadius, ElementName=Root}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            MinHeight="250">
        <Grid CornerRadius="{Binding CornerRadius, ElementName=Root}"
              Padding="20">
            <Viewbox MaxHeight="40" MaxWidth="40" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Center">
                <FontIcon Glyph="&#xEA69;" 
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            </Viewbox>
            <Image Source="{Binding Source, ElementName=Root}" 
                   Stretch="{Binding Stretch, ElementName=Root}" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Margin="-20"/> <!-- Negative margin to counteract Grid padding for the actual image -->
        </Grid>
    </Border>
</UserControl>
